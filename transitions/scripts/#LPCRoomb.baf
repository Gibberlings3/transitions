THEN
	RESPONSE #100
		SetGlobal("#L_PlayerChestLocation","GLOBAL",3)
		MoveContainerContents("#LBD0103*PlayerChest00","#LBG3201*PlayerChest00") // #1 BG1 Room in Palace
//		%SOD_CHEST_TRANS%
